<g class="connectable-node">
  <g 
    bp-draggable="data"
    ng-class="{ selected: isSelected }"
    on-selection-changed="selectionChanged($selected)"
    ng-switch="data.className"
    >
    <bp-neuron ng-switch-when="ActivatorNeuron" neuron="data" editable="{{canEdit}}"/>
    <bp-neuron ng-switch-when="InhibitorNeuron" neuron="data" editable="{{canEdit}}"/>
    <bp-neuron ng-switch-when="AssociatorNeuron" neuron="data" editable="{{canEdit}}"/>
    <bp-neuron ng-switch-when="DisassociatorNeuron" neuron="data" editable="{{canEdit}}"/>
  </g>    
</g>