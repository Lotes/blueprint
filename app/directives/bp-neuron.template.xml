<g 
  class="neuron"
  >
  <g 
    bp-draggable="data"
    ng-class="{ selected: isSelected }"
    on-selection-changed="selectionChanged($selected)"
    ng-switch="data.$attributes.type"
    >
    <g ng-switch-when="activate" class="neuron-activate" bp-connector="default">
      <circle cx="0" cy="0" ng-attr-r="{{ outerRadius }}" />
    </g>
    <g ng-switch-when="inhibit" class="neuron-inhibit" bp-connector="default">
      <circle cx="0" cy="0" ng-attr-r="{{ outerRadius }}" />
    </g>
    <g ng-switch-when="associate" class="neuron-associate" bp-connector="default">
      <circle class="outer" cx="0" cy="0" ng-attr-r="{{ outerRadius }}" />
      <circle class="inner" cx="0" cy="0" ng-attr-r="{{ innerRadius }}" />
    </g>
    <g ng-switch-when="disassociate" class="neuron-disassociate" bp-connector="default">
      <circle class="outer" cx="0" cy="0" ng-attr-r="{{ outerRadius }}" />
      <circle class="inner" cx="0" cy="0" ng-attr-r="{{ innerRadius }}" />
    </g>
  </g>    
</g>