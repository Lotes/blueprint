<g class="connection">  
  <g     
    bp-selectable="data" 
    on-selection-changed="state.isSelected = $selected"
    ng-class="{selected: state.isSelected}"
    >
    <g ng-if="data.anchors.length &gt; 0">
      <!-- last segment -->
      <path 
        ng-style="{ 'marker-end': 'url(#marker-connection-activate)'}"
        ng-attr-d="{{ 'M'+(data.anchors[data.anchors.length-1].position | coordinate)+' Q'+(data.anchors[data.anchors.length-1].position | coordinateAdd : data.anchors[data.anchors.length-1].outHandle.position | coordinate)+' '+(destinationPosition | coordinate) }}" 
        ng-mousedown="onMouseDown($event, data.anchors.length)"
      />
      <!-- first segment -->
      <path 
        ng-attr-d="{{ 'M'+(sourcePosition | coordinate)+' Q'+(data.anchors[0].position | coordinateAdd : data.anchors[0].inHandle.position | coordinate)+' '+(data.anchors[0].position | coordinate) }}" 
        ng-mousedown="onMouseDown($event, 0)"
      />    
      <!-- all other segments in between -->
      <path 
        ng-repeat="anchor in data.anchors"
        ng-if="!$first"
        ng-attr-d="{{ 'M'+(data.anchors[$index-1].position | coordinate)+' C'+(data.anchors[$index-1].position | coordinateAdd : data.anchors[$index-1].outHandle.position | coordinate)+' '+(data.anchors[$index].position | coordinateAdd : data.anchors[$index].inHandle.position | coordinate)+' '+(data.anchors[$index].position | coordinate) }}" 
        ng-mousedown="onMouseDown($event, $index)"
      />            
    </g>
    <g ng-if="data.anchors.length == 0">
      <!-- only one segment  -->
      <line 
        ng-style="{ 'marker-end': 'url(#marker-connection-activate)'}"
        ng-attr-x1="{{sourcePosition[0]}}" 
        ng-attr-y1="{{sourcePosition[1]}}" 
        ng-attr-x2="{{destinationPosition[0]}}" 
        ng-attr-y2="{{destinationPosition[1]}}" 
        ng-mousedown="onMouseDown($event, 0)"
        />
    </g>
  </g>  
  <!-- anchors  -->
  <g ng-if="data.anchors.length &gt; 0">
    <bp-anchor ng-repeat="anchor in data.anchors" anchor="anchor"/>
  </g>
</g>